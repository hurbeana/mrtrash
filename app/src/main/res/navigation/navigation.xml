<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation"
            app:startDestination="@id/wasteTypeFragment">

    <fragment android:id="@+id/wasteTypeFragment" android:name="at.mrtrash.WasteTypeFragment"
              android:label="fragment_waste_type" tools:layout="@layout/fragment_waste_type">
        <action android:id="@+id/action_wasteTypeFragment_to_disposalOptionsFragment"
                app:destination="@id/disposalOptionsFragment"/>
    </fragment>
    <fragment android:id="@+id/disposalOptionsFragment" android:name="at.mrtrash.DisposalOptionsFragment"
              android:label="fragment_disposal_options" tools:layout="@layout/fragment_disposal_options">
        <action android:id="@+id/action_disposalOptionsFragment_to_disposalOptionDetailFragment"
                app:destination="@id/disposalOptionDetailFragment"/>
    </fragment>
    <fragment android:id="@+id/disposalOptionDetailFragment" android:name="at.mrtrash.DisposalOptionDetailFragment"
              android:label="fragment_disposal_option_detail" tools:layout="@layout/fragment_disposal_option_detail">
        <argument android:name="disposalOption" app:argType="at.mrtrash.models.DisposalOption"/>
    </fragment>

</navigation>